<UserControl
    x:Class="NotToday.Controls.CardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NotToday.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border
            MinHeight="48"
            Padding="16,4"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="2">
            <ContentPresenter x:Name="HeaderPresenter" VerticalAlignment="Center" />
        </Border>

        <Border
            x:Name="ContentBorder"
            Grid.Row="1"
            Padding="{Binding Padding, ElementName=ParentControl, Mode=OneWay}"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource TransparentBackgroudBrush}"
            BorderThickness="1,0,1,0"
            CornerRadius="2">
            <ContentPresenter x:Name="ContentPresenter" VerticalAlignment="Top" />
        </Border>

        <Border
            x:Name="FonterLine"
            Grid.Row="2"
            Padding="16,8"
            Background="{DynamicResource TransparentBackgroudBrush}"
            BorderThickness="1,0,1,0"
            Visibility="Collapsed">
            <Rectangle Height="1" Fill="{DynamicResource SystemAccentBrush}" />
        </Border>

        <Border
            x:Name="FonterBorder"
            Grid.Row="3"
            Padding="16,4"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource TransparentBackgroudBrush}"
            BorderThickness="1,0,1,1"
            CornerRadius="2"
            Visibility="Collapsed">
            <ContentPresenter x:Name="FonterPresenter" VerticalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
