<Application
    x:Class="NotToday.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:NotToday.Converters"
    xmlns:local="clr-namespace:NotToday"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Light.xaml" />
                <ResourceDictionary Source="/Controls/ImageCropper/ImageCropperThumb.xaml" />
                <ResourceDictionary Source="/Controls/ImageCropper/ImageCropper.xaml" />
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="SystemAccentBrush" Color="{DynamicResource SystemAccentColor}" />
            <Color x:Key="SystemAccentColor">#009faa</Color>
            <converters:BoolToVisibilityConverter x:Key="TrueToVisibleConverter" IsReverse="False" />
            <converters:BoolToVisibilityConverter x:Key="TrueToCollapsedConverter" IsReverse="True" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibleConverter" NullToVisible="True" />
            <converters:NullToVisibilityConverter x:Key="NullToCollapsedConverter" NullToVisible="False" />
            <converters:BoolReverseConverter x:Key="BoolReverseConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
